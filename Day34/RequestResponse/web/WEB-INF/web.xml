<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>RequestAPIServlet</servlet-name>
        <servlet-class>ringo.request.RequestAPIServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ParameterServlet</servlet-name>
        <servlet-class>ringo.request.ParameterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Servlet1</servlet-name>
        <servlet-class>ringo.request.Servlet1</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Servlet2</servlet-name>
        <servlet-class>ringo.request.Servlet2</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ForwardC</servlet-name>
        <servlet-class>ringo.request.ForwardC</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletResponse</servlet-name>
        <servlet-class>ringo.request.ServletResponse</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletResponseNew</servlet-name>
        <servlet-class>ringo.request.ServletResponseNew</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>RequestAPIServlet</servlet-name>
        <url-pattern>/request</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ParameterServlet</servlet-name>
        <url-pattern>/para</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Servlet1</servlet-name>
        <url-pattern>/s1</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Servlet2</servlet-name>
        <url-pattern>/s2</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ForwardC</servlet-name>
        <url-pattern>/fc</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletResponse</servlet-name>
        <url-pattern>/resp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletResponseNew</servlet-name>
        <url-pattern>/new</url-pattern>
    </servlet-mapping>
</web-app>