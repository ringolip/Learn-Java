<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <session-config>
        <session-timeout>20</session-timeout>
    </session-config>

    <servlet>
        <servlet-name>CookieServlet</servlet-name>
        <servlet-class>ringo.servlet.CookieServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CookieSetServlet</servlet-name>
        <servlet-class>ringo.servlet.CookieSetServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SessionServlet</servlet-name>
        <servlet-class>ringo.servlet.SessionServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CookieServlet</servlet-name>
        <url-pattern>/cookieservlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CookieSetServlet</servlet-name>
        <url-pattern>/cookieset</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SessionServlet</servlet-name>
        <url-pattern>/sessionservlet</url-pattern>
    </servlet-mapping>



</web-app>
